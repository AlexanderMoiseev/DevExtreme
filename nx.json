{
    "tasksRunnerOptions": {
        "default": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheableOperations": ["build", "watch"]
            }
        }
    },
    "targetDefaults": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [
                "{projectRoot}/packages/{angular, core, react}/{lib, dist, tsc-out}"
            ]
        },
        "watch": {
            "outputs": [
                "{projectRoot}/packages/{angular, core, react}/{lib, dist, tsc-out}"
            ]
        },
        "start": {
            "dependsOn": ["^build"]
        },
        "test": {
            "dependsOn": ["^build"],
            "inputs": ["default", "^default", "{workspaceRoot}/jest.preset.js"]
        }
    },
    "defaultBase": "22_2",
    "workspaceLayout": {
        "appsDir": "playgrounds",
        "libsDir": "packages"
    }
}
