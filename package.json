{
  "private": true,
  "type": "module",
  "devDependencies": {
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.42",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "nx": "15.0.10",
    "@nrwl/nx-cloud": "latest"
  },
  "scripts": {
    "build:angular": "npm run build --prefix packages/angular",
    "build:core": "npm run build --prefix packages/core",
    "build:react": "npm run build --prefix packages/react",
    "build:packages": "npm run build:core && npm run build:react && npm run build:angular",
    "build": "nx run-many --target=build --projects=@devexpress/core,@devexpress/react,@devexpress/angular --skip-nx-cache",
    "watch": "nx run-many --target=watch",
    "clean": "npm run typescript:clean",
    "test": "npm run lint:eslint && npm run test:jest",
    "test:jest": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.json --no-cache",
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint --ignore-path .gitignore {packages,playgrounds}/*/src/**/*.ts",
    "lint:eslint:fix": "eslint --ignore-path .gitignore --fix {packages,playgrounds}/*/src/**/*.ts",
    "typescript:build": "tsc --build ./tsconfig.project.json",
    "typescript:watch": "npm run typescript:build -- --watch",
    "typescript:clean": "rimraf ./{packages,playgrounds}/*/{lib,dist,tsc-out,*.tsbuildinfo}",
    "update:tsconfig": "ts-node-esm scripts/update-package-tsconfig.ts"
  },
  "workspaces": [
    "packages/*",
    "playgrounds/*"
  ]
}
